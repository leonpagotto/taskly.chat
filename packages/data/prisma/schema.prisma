// Prisma schema for Taskly conversation persistence
// Story 02 Retrieve Conversation History (SPEC-001)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Conversation {
  id           String    @id @default(cuid())
  projectId    String?   // nullable global conversations
  title        String?
  participants String    // JSON encoded string array (simpler for sqlite); later migrate to separate table
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  messages     Message[]
}

model Message {
  id              String       @id @default(cuid())
  conversationId  String
  role            String       // 'user' | 'assistant' | 'system'
  content         String
  tokensEstimate  Int?
  meta            String?      // JSON string for meta (parse artifacts, task draft ids)
  createdAt       DateTime     @default(now())
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}
