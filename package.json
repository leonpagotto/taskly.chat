{
  "name": "taskly-chat-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^24.5.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "husky": "9.0.11",
    "localtunnel": "^2.0.2",
    "typescript": "5.9.2",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  },
  "scripts": {
    "dev": "pnpm -r run dev",
    "prisma:generate": "pnpm --filter @taskly/data run prisma:generate",
    "prisma:migrate:dev": "pnpm dlx prisma migrate dev",
    "build:packages": "tsc -b packages/core packages/ai packages/integration packages/data",
    "build": "pnpm run prisma:generate && pnpm run build:packages && pnpm --filter @taskly/chat-app run build",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm run build:packages && tsc -p tsconfig.typecheck.json --noEmit --pretty false",
    "test": "pnpm --filter @taskly/data run test",
    "spec:index": "node scripts/generate-spec-index.mjs",
    "spec:scaffold:story": "node speca-chat/scripts/scaffold-story.mjs",
    "spec:scaffold:task": "node speca-chat/scripts/scaffold-task.mjs",
    "spec-index:generate": "node scripts/generate-spec-index.mjs",
    "tasks:validate": "node scripts/validate-tasks.mjs",
    "tasks:relationships": "node scripts/check-relationships.mjs",
    "tasks:status:fill": "node scripts/update-story-statuses.mjs",
    "tasks:normalize": "node scripts/normalize-tasks.mjs",
    "tasks:types:migrate": "node scripts/legacy/migrate-task-types.mjs",
    "tasks:manifest": "node scripts/sync-tasks-manifest.mjs",
    "task:promote": "node scripts/promote-task.mjs",
    "task:status": "node scripts/update-task-status.mjs",
    "tasks:archive": "node scripts/archive-done-tasks.mjs",
    "spec:index:json": "node scripts/generate-spec-index.mjs --json",
    "guard:legacy-paths": "node scripts/check-legacy-paths.mjs",
    "spec:board": "node speca-chat/scripts/generate-board.mjs",
    "spec:validate": "node speca-chat/scripts/validate-structure.mjs",
    "spec:lint:placeholders": "node speca-chat/scripts/lint-placeholders.mjs",
    "tunnel": "lt --port 3000 --print-requests",
    "prepare": "husky"
  }
}
